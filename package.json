{
  "name": "outline-sync",
  "version": "0.1.0",
  "private": true,
  "description": "Enable 2-way sync between an Outline workspace and file system + MCP support",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/outline-sync"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "generate:openapi": "openapi-typescript https://raw.githubusercontent.com/outline/openapi/refs/heads/main/spec3.yml -o ./src/services/generated/outline-openapi.d.ts",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "release": "pnpm build && pnpm changeset publish",
    "start": "tsx src/index.ts",
    "test": "pnpm test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "openapi-fetch": "^0.14.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.4",
    "@ktam/lint-node": "0.4.0",
    "@tsconfig/node20": "^20.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.27.0",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.1.2"
  },
  "packageManager": "pnpm@10.6.5",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10.6.0"
  },
  "volta": {
    "node": "22.14.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
